{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "src-main/**/*"]
}
